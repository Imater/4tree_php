{
  "name": "4tree - мои дела",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Мы заботимся о ваших деревьях, чтобы у вас оставалось время строить и воспитывать…",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup" : "popup.html"
  },
  "permissions": [
    "http://4tree.ru/",
    "http://*/*",
    "https://*/*",
    "tabs",
    "contextMenus"
  ],
  "background": {
    "scripts": ["sample.js","contentscript.js"]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}